extends base

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn Start Recording
        if errorMessage
            span=errorMessage
        form(method= "post", enctype="multipart/form-data" )
            label(for="video") Video File
            input(type="file", accept="video/*", id="video",name="video", required)
            label(for="thumbnail") Thumbnail File
            input(type="file", accept="image/*", id="thumbnail",name="thumbnail", required)
            input(name="title",type="text", placeholder="Title", required)
            input(name="description",type="text", placeholder="Description", required)
            input(name="hashtags",type="text", placeholder="Hashtags, separated by comma.", required)
            input(type="submit",value="Upload Video")

block scripts
    script(src="/static/js/recorder.js")
