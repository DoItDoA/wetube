extends ../base

block content
    if errorMessage
        span=errorMessage
    form(method="post")
        input(placeholder="Old Password", type="password", name="oldPassword", required)
        input(placeholder="New Password", type="password", name="newPassword", required)
        input(placeholder="New Password Confirmation", type="password", name="newPasswordConfirm", required)
        input(value="Change Password", type="submit")